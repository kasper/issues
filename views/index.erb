<% content_for :page_title do "Title" end %>

  <ul>
  <% @users.each do |user| -%>
    <li><%= user.username %></li>
  <% end -%>
  </ul>
  
  <ul>
  <% @issues.each do |issue| -%>
    <li><a href="/issues/<%= issue.id %>"><%= issue.title %></a> opened by <%= issue.user.username %> <%= Time.parse(issue.opened_on.to_s).ago_in_words %></li>
  <% end -%>
  </ul>