- content_for :title, @user.username

#profile

  - if edit_allowed?(@user)
  
    .edit
    
      %ul
        %li= link_to('Edit', edit_user_path(@user))

  %h1= @user.username
  
  - if @user.name && !@user.name.empty?
    %p.info= @user.name
  
  %p
    %span.strong Registered since
    =natural_date(@user.registered_on)
  
  - if @user.location && !@user.location.empty?
  
    %p
      %span.strong Location 
      = @user.location
  
  - if @user.www && !@user.www.empty?
  
    %p 
      %span.strong WWW
      =markdown(@user.www)
    
  - if @user.description && !@user.description.empty?
  
    %p
      %span.strong Description
      =markdown(@user.description)

#user-issues

  %h1 #{@user.username}'s Issues      
      
  = haml :issues_list