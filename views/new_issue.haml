- content_for :title, 'New issue'

%form{:action => "/issues/new", :method => "post"}

  %label Title
  %input#new-issue-title{:type => "text", :name => "issue_title", :value => @issue_title}
  
  - if @errors && @errors[:title]
    %p.error= @errors[:title]
  
  %label Write
  %textarea#new-issue-content{:name => "issue_content"}= @issue_content
  
  - if @errors && @errors[:content]
    %p.error= @errors[:content]
  
  %input.styled-button{:type => "submit", :value => "Submit new issue"}