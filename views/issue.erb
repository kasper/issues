<h1><%= @issue.title %></h1>

<div><%= @issue.message %></div>

<% @issue.responses.each do |response| %>
<div><%= response.message %> by <%= response.user.username %></div>
<% end %>

  <form action="/issue/respond/<%= @issue.id %>" method="post">
    <div><textarea cols="40" rows="20" name="message">Respond</textarea></div>
    <div><input type="submit" value="Respond"></div>
  </form>